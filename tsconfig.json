{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es6"],
    "module": "es2015",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2017",
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
